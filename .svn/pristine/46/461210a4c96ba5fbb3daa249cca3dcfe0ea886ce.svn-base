
/*list news*/
.listnews{display:block; overflow:hidden; font-size:15px;margin-top:15px;}
.listnews h2{background:white; overflow:hidden; font:14pt/18px Arial; color:#00a1e6; margin:0}
.listnews h2 a{float:left; width:auto; padding:8px; text-decoration:none; border-top:2px solid #ffc600;color:#00a1e6;}

.listnews ul{display:block; margin:0; padding:0; list-style:none}
.listnews li{float:none; font:15px Arial; color:#333; border-bottom:1px dashed #ccc; overflow:hidden; padding:10px 0}
.listnews li img{max-width:145px; max-height:115px; float:left; margin-right:10px;}
.listnews li a{text-decoration:none;font:1.33em/18px Arial;color:#333}
.listnews li span{ font-size:13px; line-height:18px}
.listnews li h3 {color:#333; display: block; font:bold 14px/20px Arial; margin:0; padding-bottom:10px}

.li2_img{float:left; overflow:hidden;}
.li2_img img{ max-width:80px !important; max-height:60px !important; margin-right:10px !important}

/*news-detail*/
.newsdetail{display:block; margin:15px auto; overflow:hidden}
.newsdetail img{max-width:300px; display:block; float:none; margin:15px auto}
.newsdetail a{text-decoration:none; color:#00a1e6}
.newsdetail p{font:13px/22px Arial; color:#333; float:none; display:block}
.newsdetail h1{font:bold 14px/20px Arial; color:#333; display:block; float:none; margin-left:0;}
.newsdetail span{font:13px/30px Arial; color:#666; display:block; float:none}
.newsdetail strong{color:#555; line-height:20px; float:none; font:bold 13px Arial}
.newsdetail em{font: italic 12px Arial; color:#555; line-height:22px; text-align:center; display:block; float:none}

/*pagination*/
.pagination{float:right; margin:10px; overflow:hidden}
.pagination ul{margin:0; padding:0; list-style:none; display:block}
.pagination li{float:left;text-align:center; margin-right:5px}
.pagination li a{display:block; background:white; border:1px solid #ccc;border-radius:4px 4px 4px 4px; font:13px Arial; color:#333; width:22px; height:20px; padding: 6px 5px 5px; text-decoration:none}
.pagination li a.active{background:white;color:#00a1e6; border:1px solid #00a1e6}