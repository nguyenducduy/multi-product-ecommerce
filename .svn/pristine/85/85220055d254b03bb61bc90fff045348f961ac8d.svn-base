

.arrow-downnav {
  display: inline-block;
  width: 0;
  height: 0;
  vertical-align: top;
  border-top: 7px solid #ff6600;
  border-right: 7px solid transparent;
  border-left: 7px solid transparent;
  margin-top:-4px;
  position:absolute;
  top:20px;
  right:8px;
}

.navleft ul{margin:0; padding:0;}

.navleft li{
	position:relative;
	
	font:normal 15px Arial;
	list-style:none;
	color:#000;
	cursor:pointer;
	background:#fff;
  	
}
.navleft li.menu-cover{
    width: 200px;
    border-bottom:2px solid #249fda;
    float:left;
    height:32px;
	margin-top:5px;
	background: url(/templates/default/images/site/down4-16.png) 178px no-repeat;
}
.navleft li.menu-cover span{
	color: #333;
	text-transform:uppercase;
    font: bold 15px/40px Arial;
    margin-top:-5px;
    float:left;
    margin-left:7px;
}

.navleft li:hover > ul.sub-nav{ display:block}
.sub-nav{display:none;}
ul.sub-nav{
	position:absolute;
	top:35px;
	left:0;
	float:left;
	z-index:999;
    font-size: 13px;
    font-family: "arial","sans-serif";
    width: 200px;
    background: #fff;
	list-style:none;
}

ul.sub-nav li{
	display: block;
    font-weight: normal !important;
    padding: 2.7pt 0 !important;
    width: 200px !important; height:33px; line-height:16px;
	position:static;
	border-bottom:1px solid #dfdfdd;
}

ul.sub-nav > li:hover{background: #dfdfdd url(/templates/default/images/site/w-arr.png)no-repeat 180px 12px !important;}
ul.sub-nav > li.maintainHover{
background: #dfdfdd url(/templates/default/images/site/w-arr.png)no-repeat 180px 12px !important;
}
ul.sub-nav li a{
	background: transparent !important;
    color: #111;
    display: block;
    font-size: 15px;
    font-weight: normal;
    padding: 0px 5px;
	width:200px;
    text-decoration: none;
}

ul.sub-nav li a strong{
    color: #707070;
	font-size: 11px;
    display: block;
    font-weight: normal;
}


/* dropdown */
ul.sub-nav li ul.hidd{
    height:392px;
	position: absolute;
    top:0;
	width:665px;
    background:transparent;
    display:none;
	list-style:none;
	z-index:-88;
	
}

ul.sub-nav li:hover ul.hidd{ display: block; }

ul.sub-nav li ul.hidd li{
	display:block;
	float:left;
    left: 200px !important; height:auto;
    border:none;
    position: relative !important;
    width: 120px!important;
	margin: 4px 0 0 10px;
	background: none;
	z-index:999;

}

ul.sub-nav li ul.hidd li ul.sub-hidd{
	float:left;
	list-style:none;
	margin-top:0;
	margin-left:8px;
	
}

ul.sub-nav li ul.hidd li ul.sub-hidd li{
	float:none;
	color:#333;
	display:block;
	border:none !important;
	left:0 !important;
    padding:2px 2px !important;
	
	/*background: url(../images/blue-arr.png) no-repeat scroll 0px 7px transparent !important;*/
	
}
ul.sub-nav li ul.hidd li ul.sub-hidd li.tt-cate{
	font:bold 13px Arial !important; float:none; clear:both;
	color:#000 !important;
	margin:5px 0 !important;}
ul.sub-nav li ul.hidd li ul.sub-hidd li.tt-cate a{
	font:bold 13px Arial !important;
	text-decoration:none !important;
	color:#000 !important;}

ul.sub-nav li ul.hidd li ul.sub-hidd li.tt-cate a:hover{
	color:#00a1e6!important;
	font:bold 13px Arial !important;
	text-decoration:none !important; 
}
ul.sub-nav li ul.hidd li ul.sub-hidd li span.arr{ 
    color:#00a1e6;
    margin-top:-14px !important;
  
    margin-left:-10px;
    font-size:16px !important; 
    font-weight:normal
}
ul.sub-nav li ul.hidd li ul.sub-hidd li.nobg a{
	color:#0082cc !important;
	float:left;
	margin:3px 0 3px -10px;
	font-size:12px !important;
	font-weight:bold !important;
   
	width: 160px !important;
	
}
ul.sub-nav li ul.hidd li ul.sub-hidd li.nobg a:hover{
	color:#eea200 !important;
	font-weight:bold !important;
	text-decoration:none !important;
	
}
ul.sub-nav li ul.hidd li ul.sub-hidd li a{
	font:normal 12px Arial !important;
    color:#333 !important;
	background:none !important
}
ul.sub-nav li ul.hidd li ul.sub-hidd li a:hover{
	font-weight: normal !important;
    color: #0082cc !important;
	text-decoration:underline !important;
}


ul.sub-nav li ul.hidd li.bgmenu{
    display:block ;
    background:white !important;
    width:665px !important;
    height:366px !important;
    position:absolute !important;
    top:0;
    right:0;
    margin:0;
	border: solid 3px #dfdfdd;
    padding:0 !important;
	overflow:hidden;
   
}
ul.sub-nav li ul.hidd li.bgmenu img{ position:absolute; right:0; bottom:0px; z-index:99}

/* Tivi*/
ul.sub-nav li ul.hidd li.larg{
	float:left;
    left: 200px !important;
    position: relative !important;
    width: 150px!important;
	margin: 4px 0 0 10px;
	background: none;
}

ul.sub-nav li ul.hidd li.larger{
	float:left;
    left: 200px !important;
    position: relative !important;
    width: 190px!important;
	margin: 4px 0 0 10px;
	background: none;

}
